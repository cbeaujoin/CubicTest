<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         name="CubicTestSeleniumExporter"
         point="org.cubictest.exporters">
   </extension>
  
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="cubictest.contribution1"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               label="CubicTest"
               path="additions"
               id="cubictest.menu1">
            <separator
                  name="CubicTest">
            </separator>
         </menu>
    
         <action
               enablesFor="1"
               label="Create Selenium tests"
               icon="icons/selenium_export_icon.gif"
               class="org.cubictest.exporters.selenium.ui.ExportToSeleniumAction"
               menubarPath="cubictest.menu1/group1"
               id="org.cubictest.exporters.selenium.ui.ExportToSeleniumAction">
         </action>
      </objectContribution>
      <viewerContribution
            id="CubicTestSeleniumExporter.viewerContribution1"
            targetID="cubicTestPlugin.editor.contextmenu">
         <action
               class="org.cubictest.exporters.selenium.ui.ExportToSeleniumEditorAction"
               icon="icons/selenium_export_icon.gif"
               id="org.cubictest.exporters.selenium.ui.ExportToSeleniumEditorAction"
               label="Create Selenium tests"
               menubarPath="additions"/>
         <action
               class="org.cubictest.exporters.selenium.ui.RunSeleniumRunnerAction"
               icon="icons/selenium_run_icon.gif"
               id="org.cubictest.exporters.selenium.ui.RunSeleniumRunnerAction"
               label="Run Test with Cubic Selenium Runner"
               menubarPath="additions"/>
      </viewerContribution>

   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
 	  <page id="CubicTestSeleniumExporterPreferencePage"
  	      	name="Selenium Exporter"
	      	class="org.cubictest.exporters.selenium.ui.preferences.SeleniumExporterPreferencePage"
		    category="CubicTestPreferencePage">
   	  </page>
</extension>
</plugin>
